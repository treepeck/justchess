{{define "form"}}
<form id="authForm">
	<h1>
		{{ if .Form.IsSignUp }}
		Create a new account
		{{ else }}
		Sign in to your account
		{{ end }}
	</h1>

	{{ if .Form.IsSignUp }}
	<div>
		<label>
			Username
		</label>
		<input
			type="text"
			name="name"
			autocomplete="off"
			placeholder="MagnusCarlsen"
		/>
		<p id="nameError"></p>
	</div>
	{{ end }}

	<div>
		<label {{ if .Form.IsSignUp }}id="tooltipToggle"{{ end }}>
			Email address
		</label>
		<input
			type="text"
			name="email"
			autocomplete="off"
			placeholder="magnus@carlsen.com"
		/>
		<p id="emailError"></p>
	</div>

	<div>
		<label>
			Password
		</label>
		<div class="password-container">
			<input
				id="passwordInput"
				type="password"
				name="password"
				autocomplete="off"
				placeholder="*************"
			/>
			<div id="passwordToggle"></div>
		</div>
		<p id="passwordError"></p>
	</div>

	<p id="serverError"></p>
	<button type="submit" id="submitBtn">
		{{ if .Form.IsSignUp }}Sign up{{ else }}Sign in{{ end }}
	</button>

	<p class="form-footer">
		{{ if .Form.IsSignUp }}
		Already have an account? <a href="/signin">Sign in</a>
		{{ else }}
		Does not have an account? <a href="/signup">Sign up</a>
		{{ end }}
	</p>
</form>
{{end}}