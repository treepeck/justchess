{{ define "content" }}
<div id="mainContainer" data-page="game">
  <div class="chat-container">
    <div class="chat-header">Chat</div>
    <div id="chatMessages"></div>

    <div class="chat-input-container">
      <input
        id="chatInput"
        type="text"
        placeholder="Enter your message"
        autocomplete="off"
      />
      <div id="chatSendButton"></div>
    </div>
  </div>

  <div class="board-container">
    <div class="board-miniprofile">
      <a href="/player/{{ .Data.White.Name }}">{{ .Data.White.Name }}</a>
      <div class="board-miniprofile-rating">({{ .Data.White.Rating }} mmr)</div>
      <div id="whiteTimer" class="board-miniprofile-timer">00:00</div>
    </div>

    <div id="board"></div>

    <div class="board-miniprofile">
      <a href="/player/{{ .Data.Black.Name }}">{{ .Data.Black.Name }}</a>
      <div class="board-miniprofile-rating">({{ .Data.Black.Rating }} mmr)</div>
      <div id="blackTimer" class="board-miniprofile-timer">00:00</div>
    </div>
  </div>

  <div class="move-table-container">
    <div class="move-table-header">Moves</div>
    <div id="moveTable"></div>

    <div class="move-table-controls">
      <button class="move-table-button"> \<- </button>
      <button class="move-table-button"> \< </button>
      <button class="move-table-button"> > </button>
      <button class="move-table-button"> -> </button>
    </div>
  </div>
</div>

<div id="ping">Ping: ? ms</div>
{{ end }}