{{ define "content" }}
<form id="authForm" data-page="signup">
  <div class="auth-form-header">Create a new account</div>

  <div class="auth-form-input-container">
    <div>Username</div>
    <input
      type="text"
      name="name"
      autocomplete="off"
      placeholder="MagnusCarlsen"
    />
    <div class="auth-form-error" id="authFormNameError"></div>
  </div>

  <div class="auth-form-input-container">
    <div class="help-dialog-activator" id="emailHelpDialogActivator">
      Email address
    </div>
    <input
      type="text"
      name="email"
      autocomplete="off"
      placeholder="magnus@carlsen.com"
    />
    <div class="auth-form-error" id="authFormEmailError"></div>
  </div>

  <div class="auth-form-input-container">
    <div>Password</div>

    <div class="auth-form-input-password">
      <input
        id="authFormPasswordInput"
        type="password"
        name="password"
        autocomplete="off"
        placeholder="*************"
      />
      <div id="authFormPasswordToggle"></div>
    </div>

    <div class="auth-form-error" id="authFormPasswordError"></div>
  </div>

  <div id="authFormServerError" class="auth-form-error"></div>
  <button id="authFormSubmitButton">Sign up</button>

  <div class="auth-form-footer">
    Already have an account? <a href="/signin">Sign in</a>
  </div>
</form>

<div id="emailHelpDialog" class="help-dialog-container">
  <div class="help-dialog-content">
    <h2><b>Why do I need to enter my email address?</b></h2>

    <p>To securely reset your password if you forget it.</p>
    <p>Your email will never be shared or used for any other purpose.</p>

    <button id="emailHelpDialogCloseButton" class="help-dialog-close-button">OK</button>
  </div>
</div>

<div id="confirmDialog">
  <div class="confirm-dialog-content">
    <div class="confirm-dialog-header">Please note</div>

    <div>Accounts with offensive or inappropriate names will be blocked.</div>

    <div class="confirm-dialog-buttons">
      <button id="confirmDialogCancelButton">Cancel</button>
      <button id="confirmDialogConfirmButton">Confirm</button>
    </div>
  </div>
</div>
{{ end }}